<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_5sdp">

    <TextView
        android:id="@+id/tv_trip_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        android:text="@string/start_trip"
        android:textAllCaps="true"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_trip_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_trip_name"
        android:layout_marginTop="@dimen/_5sdp">

        <EditText
            android:id="@+id/et_trip_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_start_trip"
            android:maxLines="2">

            <requestFocus />
        </EditText>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/bnt_start_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_trip_name"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/start_trip" />

</RelativeLayout>